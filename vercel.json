{
    "version": 2,
    "buildCommand": "npm run vercel-build",
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client/dist/assets/$1"
        },
        {
            "src": "/(.*\\.js)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/(.*\\.css)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/(.*\\.svg)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/(.*\\.ico)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        }
    ]
}